@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var count = 0;
}

<div class="text-center">
    <h4 style="margin-top:5vh"> Welcome To</h4>
    <h1 class="display-4">The Inventory</h1>
    
    <div class="welcome_img row col-12">
        <div class="dog_img_cont col-12">
            <img class="dog_img" src=~/img/welcome_img.svg />
        </div>
    </div>
    @foreach(var dog in Model.Dog)
    {
        count = count + 1;
        
    }
    <h4>Home to @count Dogs</h4>
    
</div>
