<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inventory.styles.css" asp-append-version="true"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style=" position:relative; width:100%;padding-left:0px; padding-right:0px;">
            <div class="container" style="margin-left:0; margin-right:0px; width:100%">
                <a class="navbar-brand"  asp-area="" asp-page="/Index"><img src="~/img/logo.svg" alt="logo" style="height: 70px;"/></a>

                <div class="navitems" style="position:absolute; right:0; margin-right:5%">
                    <ul style="float:right; color:#F6D5A9" class="navbar-nav">
                        <li class="nav-item">
                            <a class="navlink" asp-area="" asp-page="/Dogs/Create">Adopt</a>
                        </li>
                        <li class="nav-item">
                            <a class="navlink" asp-area="" asp-page="/Dogs/Index">Dogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="navlink" asp-area="" asp-page="/Dogs/Breeding">Breeding Plans</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="padding:0">
        <main role="main" class="pb-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Inventory 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>