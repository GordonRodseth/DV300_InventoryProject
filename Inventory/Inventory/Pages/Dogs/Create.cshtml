@page
@model Inventory.Pages.Dogs.CreateModel

@{
    ViewData["Title"] = "Create";

    //var breeds = ViewData["Breeds ] as Array;


}



<div class="row">
    <div class="row col-12">
        <div class="col-3"></div>

        <div class="row col-6">
            <h1 style="margin-top:5vh">Adopt a Dog</h1>
            <form method="post" asp-page-handler="adopt" class="adopt_form row col-12">

            <div class="col-6">
                <div class="form-group">
                    <label for="breedid" class="control-label">Breed</label>
                    <select name="breedid" class="form-control">
                        <option value=0>---</option>
                        @foreach (var breed in Model.Breeds)
                        {
                                if (breed.Parent1BreedId == breed.Parent2BreedId)
                                {
                                    <option value=@breed.Id>@breed.BreedName</option>
                                }
                                
                        }
                    </select> 
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label for="name" class="control-label">Name</label>
                    <input name="name" class="form-control" type="text"/>
                </div>

                <div class="form-group">
                    <input name="motherid" type="hidden" value=0 class="form-control" />
                </div>

                <div class="form-group">
                    <input name="fatherid" type="hidden" value=0 class="form-control" />
                </div>
                <div class="form-group">
                    <label for="kennelid" class="control-label">Kennel</label>
                    <input name="kennelid" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="pedigree" class="control-label">Pedigree: Purebred</label>
                    <input name="pedigree" type="text" value="Purebred" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="sex" class="control-label">Sex:</label>
                    <select name="sex" class="form-control">
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                    </select> 
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Adopt" class="btn btn-primary" style="background-color:#006DAA;"/>
            </div>
        </form>
        </div>

        <div class="col-3"></div>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
